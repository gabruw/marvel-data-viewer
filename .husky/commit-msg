declare -A COLORS=(
    [default]="\033[0m"
    [red]="\033[0;31m"
    [blue]="\033[0;34m"
    [green]="\033[0;32m"
)

echo -e "\nHello it's ${COLORS[blue]}Husky${COLORS[default]}, one more time! ğŸº";
echo -e "Dispatching the ${COLORS[blue]}commit-msg${COLORS[default]} scripts! ğŸš€\n";

echo -e "${COLORS[blue]}It's time to check the code message! ğŸ“„\n${COLORS[default]}";
yarn --silent commitlint -e -q || (
    echo -e "\n${COLORS[red]}Your commit message is non-standard! ğŸš¨ğŸš’${COLORS[default]}";
    echo -e "${COLORS[red]}Check the Conventional Commits documentation${COLORS[default]} ${COLORS[green]}'www.conventionalcommits.org'${COLORS[default]} ${COLORS[red]}and try again! \n${COLORS[default]}";

    false;
)

echo -e "${COLORS[green]}Congratulations! Your commit message looks great! ğŸ‰${COLORS[default]}";
echo -e "${COLORS[green]}I'm committing now! ğŸ“¦\n";
