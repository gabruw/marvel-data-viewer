    echo -e "${COLORS[red]}Something went wrong with the linting... ğŸ˜°ğŸ˜¨${COLORS[default]}";
    echo -e "${COLORS[red]}Check the console and run ${COLORS[green]}'yarn lint:fix'${COLORS[default]} ${COLORS[red]}to try again!${COLORS[default]}";

    false;
)

echo -e "\n${COLORS[green]}Congratulations! Your code looks great! ğŸ‰${COLORS[default]}";
