    [default]="\033[0m"
    [red]="\033[0;31m"
    [blue]="\033[0;34m"
    [green]="\033[0;32m"
)

echo -e "Hello it's ${COLORS[blue]}Husky${COLORS[default]} again! ğŸº";
echo -e "Dispatching the ${COLORS[blue]}pre-push${COLORS[default]} scripts! ğŸš€\n";

