yarn type:check || (
    echo -e "${COLORS[red]}Something went wrong with the typing... ğŸ¤¢ğŸ¤®${COLORS[default]}";
    echo -e "${COLORS[red]}Check the log and fix the typing problems!${COLORS[default]}";

    false;
)

echo -e "${COLORS[blue]}It's time to check the code lint! ğŸ§¹\n${COLORS[default]}";
